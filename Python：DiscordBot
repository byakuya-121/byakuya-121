@client.command()
async def ping(ctx):
    raw_ping = client.latency 
    ping = round(raw_ping * 1000)
    await ctx.reply(f"Pong!\nBotã®Pingå€¤ã¯{ping}msã§ã™ã€‚")

@client.event
async def on_message(message):
    # ãƒ¡ãƒƒã‚»ãƒ¼ã‚¸é€ä¿¡è€…ãŒãƒœãƒƒãƒˆã®å ´åˆã¯ç„¡è¦–ã™ã‚‹
    if message.author.bot:
        return

    # ãƒ¡ãƒƒã‚»ãƒ¼ã‚¸ã®å†…å®¹ã‚’ã‚ªã‚¦ãƒ è¿”ã—ã™ã‚‹
    received_message = message.content # å—ä¿¡ã—ãŸãƒ¡ãƒƒã‚»ãƒ¼ã‚¸
    print(received_message) # å—ä¿¡ã—ãŸãƒ¡ãƒƒã‚»ãƒ¼ã‚¸ã‚’å‡ºåŠ›
    await message.channel.send(received_message) # å—ä¿¡ã—ãŸãƒ¡ãƒƒã‚»ãƒ¼ã‚¸ã‚’é€ä¿¡
    return


client.run(TOKEN)
